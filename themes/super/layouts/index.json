{{- $.Scratch.Add "index" slice -}}
{{- range where .Site.RegularPages "Type" "not in" (slice "page" "json") -}}
    {{- $.Scratch.Add "index" (dict "title" .Title "description" .Description "content" .Plain "permalink" .Permalink "date" (.Date.Format "2006-01-02")) -}}
{{- end -}}
{{- $.Scratch.Get "index" | jsonify -}}